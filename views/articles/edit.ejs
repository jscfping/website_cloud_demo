<%- include("../partials/header") %>

<div class="container">
	
	<div class="alert alert-primary" role="alert">
	    編輯文章
	</div>
	<form action="<%= entry %><%= article._id %>?_method=put" method="POST">
		<div class="form-group">
				<label>文章標題</label>
				<input type="text" name="article[title]" class="form-control" value="<%= article.title %>">
		</div>
		<div class="form-group">
			<label>文章內容</label>
			<textarea name="article[description]" class="form-control" rows="5"><%= article.description %></textarea>
		</div>
		<button type="submit" class="btn btn-primary">送出</button>
	</form>
	<a href="<%= entry %>" class="btn btn-info">返回</a>
</div>


<%- include("../partials/footer") %>
