<%- include("./partials/header") %>

<% //foundAllUsers, foundAllTreasures, foundAllArticles %>

<div class="container">

	<h1>Here are all users:</h1>
	<% foundAllUsers.forEach(function(user){ %>
	    <form action="/backstage/user/<%= user._id %>" method="post">
	        <h3>id: <%= user._id %></h3>
	        <h3>username: <%= user.username %></h3>
	        <h3>password: <%= user.password %>(this would be salt and hash)</h3>
			<h3>nicename: <%= user.nickname %></h3><input type="text" name="user[nickname]">
			<h3>age: <%= user.age %></h3><input type="text" name="user[age]">
			<h3>money: <%= user.cash %></h3><input type="text" name="user[cash]">
			<h3>location: <%= user.location %></h3><input type="text" name="user[location]">
			
			<h3>shoppinglist:</h3>
			<% user.shoppinglist.forEach(function(el){ %>
				<h6>id:<%= el.id %>, qty:<%= el.qty %></h6>
			<% });%>
		
			<h3>deallog:</h3>
			<% user.deallog.forEach(function(el){ %>
				<h6>id:<%= el._id %></h6>
			<% });%>
		
			<h3>treasures:</h3>
			<% user.treasures.forEach(function(el){ %>
				<h6>id:<%= el.id %>, qty:<%= el.qty %></h6>
			<% });%>
			<input type="submit" value="UPDATE!">
	    </form>
		<hr>
	<% }); %>
	<hr>
	<hr>
	<hr>
	<% foundAllTreasures.forEach(function(treasure){ %>
		<form action="/backstage/treasure/<%= treasure._id %>" method="post">
			<h3>_id: <%= treasure._id %></h3>
			<h3>id: <%= treasure.id %></h3><input type="number" name="treasure[id]">
			<h3>name: <%= treasure.name %></h3><input type="text" name="treasure[name]">
			<h3><img src="<%= treasure.image %>"></h3><input type="text" name="treasure[image]">
			<h3>desc: <%= treasure.description %></h3><input type="text" name="treasure[description]">
			<h3>price: <%= treasure.price %></h3><input type="number" name="treasure[price]">
			<h3>stocks: <%= treasure.stocks %></h3><input type="number" name="treasure[stocks]">
			<input type="submit" value="UPDATE!">
		</form>
		
	    <hr>
	<% }); %>
	<hr>
	<hr>
	<hr>
	<% foundAllArticles.forEach(function(article){ %>
		<form action="/backstage/article/<%= article._id %>" method="post">
			<h3>_id: <%= article._id %></h3>
			<h3>title: <%= article.title %></h3><input type="text" name="article[title]">
			<h3>description: <%= article.description %></h3><input type="text" name="article[description]">
			<h3>authorid: <%= article.authorid %></h3><input type="text" name="article[authorid]">
			<h3>created: <%= article.created %></h3><input type="text" name="article[created]" placeholder="use UTC number">
			<h3>isedited: <%= article.isedited %></h3><input type="checkbox" name="article[isedited]">
			<h3>edited: <%= article.edited %></h3><input type="text" name="article[edited]" placeholder="use UTC number">
			<input type="submit" value="UPDATE!">
		</form>
		
	    <hr>
	<% }); %>
	<hr>
	<hr>
	<hr>

	
	
</div>

<%- include("./partials/footer") %>